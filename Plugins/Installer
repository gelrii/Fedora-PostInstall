#!/bin/bash

Installer () {
echo ""
echo "Please select an option:"
echo "1)Install a package selection"
echo "2)Install Proprietary NVIDIA GPU Drivers"
echo "3)Install ZFS on Linux"
echo "4)Install ownCloud"
echo "5)Install Play on Linux"
echo "6)Go Back to Main Script"
echo ""
echo -n "> "
read opt
case $opt in
	1) Install_Packages
	;;
	2) Install_NVIDIA
	;;
	3) Install_ZoL
	;;
	4) Install_ownCloud
	;;
	5) Install_POL
	;;
	6) Main
	;;
	[Qq]* ) exit
	;;
	[Rr]* ) Main
	;;
esac
}
