#!/bin/bash

Dotfiles () {
echo " "
echo "Install Gelriis Dotfile Dependancies from GitHub?"
echo "[1] Yes"
echo "[2] No"
echo " "
echo -n "> "
read opt
case $opt in
	[1]* ) echo "Installing Dotfile Dependancies..."
	yum install -y wget lm_sensors phoronix-test-suite unrar recordmydesktop
	echo "Installed Dotfile Dependancies."
	Installer
	;;
	[2]* ) echo "Continuing..."
	Installer
	;;
	[Qq]* ) Exit
	;;
	[Rr]* ) Main
	;;
esac
}
