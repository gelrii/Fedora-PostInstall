#!/bin/bash

Main () {
echo ""
echo "Select an Option:"
echo "[u] System Update"
echo "[p] Remove Packages"
echo "[r] Enable RPMFusion Repositories"
echo "[i] Install Items"
echo "[s] Enable SSH"
echo "[b] Block Ads etc. with Custom Hosts File"
echo "[h] Install as HTPC"
echo "[d] Install Dotfiles"
echo "[m] Complete Minimal Setup"
echo ""
echo "[q] Exit"
#echo "7)Fix Fonts" #Deprecated until Infinality repo available for Fedora 21
echo ""
echo -n "> "
read opt
case $opt in
	[Uu]* ) System_Update
	;;
	[Pp]* ) Desktop_Environment
	;;
	[Rr]* ) Enable_RPMFusion
	;;
	[Ii]* ) Installer
	;;
	[Ss]* ) Enable_SSH
	;;
	[Bb]* ) Hosts_Block
	;;
	[Hh]* ) Install_HTPC
	;;
	[Dd]* ) Dotfiles
	;;
	[Mm]* ) Minimal_Setup
	;;
#	[Ff]* ) Fix_Fonts #Deprecated until Infinality repo available for Fedora 21
#	;; #Deprecated until Infinality repo available for Fedora 21
	[Qq]* ) exit
	;;
	[Rr]* ) Main
	;;
esac
}
