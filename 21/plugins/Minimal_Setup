#!/bin/bash

Minimal_Setup () {
echo "Complete Minimal Useful Install Procedure?"
echo " [Y]es / [N]o"
echo " "
echo -n "> "
read opt
case $opt in
	[Yy]* ) echo "Working..."
	echo "Updating System..."
	  yum update
	echo "Installing Useful HTPC Packages..."
	  yum install htop glances wget nano
	echo "Enabling SSH Access..."
	  systemctl enable sshd.service && systemctl start sshd.service && systemctl status sshd.service
	echo "Removing Useless Packages..."
	  yum remove transmission* java* libreoffice* devassistant gnome-boxes gnome-documents gnome-weather gnome-contacts gnome-maps rhythmbox empathy totem evolution shotwell cheese gwenview dragon amarok
	echo "Cleaning Up..."
	  yum autoremove
	echo "Process Complete... Please Reboot System."
	Main
	;;
	[Nn]* ) echo "Exiting...."
	Main
	;;
	[Qq]* ) echo "Exiting..."
	exit
	;;
	[Rr]* ) Main
	;;
esac
}
