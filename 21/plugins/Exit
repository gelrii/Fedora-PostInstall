#!/bin/bash

Exit () {
echo ""
echo "Are you sure you wish to exit?"
echo "[1] Yes"
echo "[2] No"
echo ""
echo -n "> "
read opt
case $opt in
	[1]* ) clear
	clear
	echo "           /:-------------:\             "
	echo "        :-------------------::           "
	echo "      :-----------/shhOHbmp---:\         "
	echo "    /-----------omMMMNNNMMD  ---:        "
	echo "   :-----------sMMMMNMNMP      ---:      "
	echo "  :-----------:MMMdP-----       ---      "
	echo " ,------------:MMMd------       ---:     "
	echo " :------------:MMMd-----       .---:     "
	echo " :----  oNMMMMMMMMMNho        .----:     "
	echo " :--      +shhhMMMmhhy++    .------      "
	echo " :-      -----:MMMd--------------:       "
	echo " :-     ------/MMMd-------------;        "
	echo " :-    ..----/hMMMy------------:         "
	echo " :-- :dMNdhhdNMMNo------------;          "
	echo " :---:sdNMMMMNds:------------:   Success!"
	echo " :------:://:-------------::             "
	echo " :---------------------://               "
	echo ""
	exit
	;;
	[2]* ) Main
	;;
	[Qq]* ) exit
	;;
	[Rr]* ) Main
	;;
esac
}
