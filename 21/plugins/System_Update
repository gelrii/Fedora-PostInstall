#!/bin/bash

System_Update () {
echo " "
echo "Update System?"
echo " [Y]es / [N]o"
echo " "
echo -n "> "
read opt
case $opt in
	[Yy]* ) echo "Updating System..."
	yum update
	echo "Updated System."
	AutoUpdate
	;;
	[Nn]* ) echo "Continuing..."
	AutoUpdate
	;;
	[Qq]* ) Exit
	;;
	[Rr]* ) Main
	;;
esac
}
